# Name of the STK++ library
LIB_STKPP_A = libSTKpp.a

STK_DIR = ../inst
STK_LIB = ../inst/lib/$(LIB_STKPP_A)

## Use the R_HOME indirection to support installations of multiple R version
PKG_CXXFLAGS += `${R_HOME}/bin/Rscript -e "Rcpp:::CxxFlags()"`
PKG_LIBS     += `$(R_HOME)/bin/Rscript -e "Rcpp:::LdFlags()"` $(STK_LIB)
PKG_CPPFLAGS += -I../inst/projects/ -I../inst/include/ -DRTKPP_LIB

export

.PHONY: all pkglib

## $(SHLIB) is the usual default target that is built automatically from all source 
## files in this directory. pkglib is an additional target for the libraries
## that will be installed in $(STK_LIB) and which users can link against.
all: $(SHLIB)
$(SHLIB): pkglib

pkglib:
	($(MAKE) -C $(STK_DIR))
	(cd $(STK_DIR) && $(MAKE) clean_obj)
	